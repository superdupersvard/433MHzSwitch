#!/bin/sh
# /etc/init.d/Gatewayd

### BEGIN INIT INFO
# Provides:          433MHzGatwaydGatewayd
# Required-Start:    $all
# Required-Stop:     $all
# Should-Start:
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Start-Before:
# X-Start-After:     openhab
# Short-Description: 433MHz Switch Gateway daemon
# Description:       Sends commands over 433 MHz radio to a power switch.
### END INIT INFO

# Adapted from noip2 (http://www.togaware.com/linux/survivor/No_IP_Manual.html)

# Using the lsb functions to perform the operations.
. /lib/lsb/init-functions
DAEMON=/usr/local/bin/433MHzGatewayd
NAME=433MHzGatewayd
PIDFILE=/var/run/433MHzGatewayd.pid

test -x $DAEMON || exit 0

case "$1" in
    start)
        echo -n "Starting 433MHz Gateway: "
        start-stop-daemon --start --exec $DAEMON --pidfile $PIDFILE --name $NAME
        echo $NAME
        ;;
    stop)
        echo -n "Stopping 433MHz Gateway daemon: "
        start-stop-daemon --stop --oknodo --retry 30 --exec $DAEMON --name $NAME
        echo $NAME
        ;;

    restart)
        echo -n "Restarting 433MHz Gateway daemon: "
        start-stop-daemon --stop --oknodo --retry 30 --exec $DAEMON
        start-stop-daemon --start --exec $DAEMON
        echo $NAME
        ;;
    *)
        echo "Usage: $0 start|stop|restart"
        exit 1
        ;;
esac

exit 0
